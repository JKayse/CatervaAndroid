<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8f4ff">
    
    <ProgressBar
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:id="@+id/progress"
	    android:layout_centerInParent="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainInfo"
        android:visibility="gone">
	    <ImageView
	        android:id="@+id/photo"
	        android:layout_width="100dp"
	        android:paddingLeft="10dp"
	       	android:layout_height="100dp"
	        android:src="@drawable/ic_launcher" />
	
	
	    <TextView
	        android:id="@+id/completeName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@id/photo"
	        android:layout_alignParentTop="true"
	        android:gravity="center_vertical"
	        android:layout_toRightOf="@id/photo"
	        android:textSize="30sp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:text="Place holder complete name" />
	
	    <TextView
	        android:id="@+id/user_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/completeName"
	        android:textSize="28sp"
	        android:paddingTop="5dp"
	        android:paddingLeft="3dp"
	        android:text="Place holder user name" />
	
	    <TextView
	        android:id="@+id/email"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/user_name"
	        android:textSize="28sp"
	        android:paddingTop="10dp"
	        android:paddingLeft="3dp"
	        android:text="Place holder email" />
	
	    <TextView
		    android:id="@+id/descriptionName"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@id/email"
		    android:paddingLeft="3dp"
		    android:text="About Me:"
		    android:paddingTop="10dp"
		    android:textSize="28sp" />
	    
	    <TextView
	        android:id="@+id/description"
	        android:background="@drawable/item_rectangle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_margin="2dp"
	        android:layout_below="@id/descriptionName"
	        android:text="Place holder description" >
	
	    </TextView>
    </RelativeLayout>
</RelativeLayout>
